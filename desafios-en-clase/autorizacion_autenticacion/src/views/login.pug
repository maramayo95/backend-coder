doctype html 
html(lang="es")
    head
        style 
            include style.css
        title Login 
    body 
        .contenedor
            h1 Login  
            form(
                class="form"
                action="/login"
                method="post"
                role="form"
                autocomplete="off"
                )
                .form-input 
                    input(
                        id="nombre"
                        name="nombre"
                        placeholder="nombre"
                        type="text" required 
                        ) 
                .form-input 
                    input(
                        id="password"
                        name="password"
                        placeholder="password"
                        type="password" required 
                        )
                .form-button
                    button(
                        type="submit"
                        value="login"
                    ) Enviar
                .anchor
                    a(href="/registro") Registrarme

